@model  Web.ViewModels.Contracts.IMetaInfoViewModel
<meta name="description" content="@Model.MetaDescription" />
@if (!string.IsNullOrWhiteSpace(Model.AllTags))
{
    <meta name="keywords" content="@Model.AllTags">
}
<meta name="robots" content="@GlobalConstants.RobotsIndexFollow" />
<meta name="revisit-after" content="1 days" />
@if (!string.IsNullOrWhiteSpace(Model.AuthorName))
{
    <meta name="author" content="@Model.AuthorName">
}
<meta property="og:title" content="@Model.MetaTitle">
<meta property="og:site_name" content="@GlobalConstants.SiteName" />
<meta property="og:type" content="website" />