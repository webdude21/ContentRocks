@using Common.Extensions
@model Web.ViewModels.Content.PostViewModel

<div class="col-md-4">
    <h2>@Model.Title</h2>
    <article>
        @Html.Raw(Model.Content.TrimWithEllipsis(GlobalConstants.HomePagePostsCharLimit))
    </article>
    <p>
        @Html.RouteLink(Translation.ReadMore, PostRoute.Name, new { area = string.Empty, friendlyUrl = Model.FriendlyUrl }, new { @class = "btn btn-primary" })
    </p>
</div>
